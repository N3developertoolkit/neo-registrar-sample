<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Neo.SmartContract.Framework" Version="3.0.0-rc2" />
  </ItemGroup>

  <Target Name="NccsBuild" AfterTargets="Build" Inputs="$(MSBuildThisFile)" Outputs="$(MSBuildThisFileDirectory)/bin/sc/$(TargetName).nef;$(MSBuildThisFileDirectory)/bin/sc/$(TargetName).nefdbgnfo;$(MSBuildThisFileDirectory)/bin/sc/$(TargetName).manifest.json;">
    <Exec WorkingDirectory="$(MSBuildThisFileDirectory)" Command="dotnet nccs --debug --no-optimize $(MSBuildThisFile)" />
  </Target>

  <Target Name="NeoExpressBuild" AfterTargets="Build" Inputs="$(MSBuildThisFileDirectory)/bin/sc/$(TargetName).nef" Outputs="$(BaseIntermediateOutputPath)neoxp">
    <Exec Command="dotnet neoxp batch express.batch --reset" WorkingDirectory="$(MSBuildThisFileDirectory)/.." />
    <Touch Files="$(BaseIntermediateOutputPath)neoxp" AlwaysCreate="true" />
  </Target>
</Project>